{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "build",
	"paths": {
		"@/*": [
			"./src/*"
		],
		"@schemas/*": [
			"./src/schemas/*"
		],
		"@db/*": [
			"./src/db/*"
		],
		"@routes/*": [
			"./src/routes/*"
		],
		"@middlewares/*": [
			"./src/middlewares/*"
		],
		"@controllers/*": [
			"./src/controllers/*"
		],
		"@services/*": [
			"./src/services/*"
		],
		"@utils/*": [
			"./src/utils/*"
		]
	},
  },
  "ts-node": {
    "esm": true,
  },

}